{
  "openapi": "3.0.0",
  "info": {
    "title": "Global",
    "description": "This specifications should have no paths and will only contain shared components",
    "version": "v1",
    "contact": {
      "name": "Borys Ponomarenko"
    }
  },
  "paths": {},
  "components": {
    "parameters": {
      "EndpointVersion": {
        "name": "version",
        "in": "path",
         "description": "Endpoint's version v*",
         "required": true,
         "style": "label",
         "schema": {
           "type": "string",
           "pattern": "^v[0-9]+$",
           "example": "v1"
         }
      }
    }
  }
}